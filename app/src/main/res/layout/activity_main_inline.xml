<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Inline anonymous listener"
        android:background="@color/colorxanh"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input a:"/>
        <EditText
            android:inputType="numberSigned"
            android:id="@+id/hsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input b:"/>
        <EditText
            android:inputType="numberSigned"
            android:id="@+id/hsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtketqua"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Equal"
        android:layout_below="@id/ln2"
        android:background="@color/colorxanh"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btngiai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtketqua"
        android:text="Add"
        />

</RelativeLayout>